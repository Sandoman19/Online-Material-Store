{{!-- make product info page --}}
<div class="product-flex">
  <div class="material-single">
    <div class="card text-white bg-secondary" >

    <img src="{{material.image}}" class="card-header"/>

    <h3 class="card-header">Material Specs</h3>

    <div class="card-body ">
      <p class="card-text">Colour: {{material.colour}} {{material.finish}}</p>
    </div>
    <div class="card-body ">
      <p class="card-text">Size: {{material.length}}mm x {{material.width}}mm x {{material.thickness}}mm</p>
    </div>
    <div class="card-body ">
      <p class="card-text">Product Code: {{material.product_code}}</p>
    </div>
    <div class="card-body ">
      <p class="card-text">Price: ${{material.price}}</p>
    </div>
    <div class="col-12 text-center">
      <button class="btn" data-material-id="{{ material.id }}" id="purchaseBtn" ><a class=" post-link" href="/"> Purchase Material</a></button>
    </div>

  </div>
</div>

